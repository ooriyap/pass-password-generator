---
interface Props {
    lang: "en" | "fa";
}
const { lang } = Astro.props;
---

<header class="flex justify-end items-center p-4 w-full max-w-4xl mx-auto z-20">
    <div
        class="flex items-center gap-4 bg-white/80 dark:bg-gray-900/80 backdrop-blur-md p-2 rounded-full shadow-sm border border-gray-100 dark:border-gray-800"
    >
        <!-- Language Toggle -->
        <div
            class="flex items-center bg-gray-100 dark:bg-gray-800 rounded-full p-1"
        >
            <a
                href="/"
                class:list={[
                    "px-4 py-1.5 rounded-full text-xs font-bold transition-all duration-300",
                    lang === "en"
                        ? "bg-white dark:bg-gray-700 text-blue-600 shadow-sm"
                        : "text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200",
                ]}
            >
                EN
            </a>
            <a
                href="/fa"
                class:list={[
                    "px-4 py-1.5 rounded-full text-xs font-bold transition-all duration-300",
                    lang === "fa"
                        ? "bg-white dark:bg-gray-700 text-blue-600 shadow-sm"
                        : "text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-200",
                ]}
            >
                FA
            </a>
        </div>

        <!-- Theme Toggle -->
        <button
            id="theme-toggle"
            class="p-2 rounded-full hover:bg-gray-100 dark:hover:bg-gray-700 text-gray-500 dark:text-gray-400 transition-colors cursor-pointer"
            aria-label="Toggle Theme"
            x-data
            @click="$store.theme.toggle()"
        >
            <!-- Sun Icon -->
            <svg
                class="w-5 h-5 hidden dark:block"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M12 3v1m0 16v1m9-9h-1M4 12H3m15.364 6.364l-.707-.707M6.343 6.343l-.707-.707m12.728 0l-.707.707M6.343 17.657l-.707.707M16 12a4 4 0 11-8 0 4 4 0 018 0z"
                ></path></svg
            >
            <!-- Moon Icon -->
            <svg
                class="w-5 h-5 block dark:hidden"
                fill="none"
                stroke="currentColor"
                viewBox="0 0 24 24"
                ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    stroke-width="2"
                    d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
                ></path></svg
            >
        </button>
    </div>
</header>

<script>
    import themeStore from "../scripts/themeStore.js";

    document.addEventListener("alpine:init", () => {
        if (!Alpine.store("theme")) {
            Alpine.store("theme", themeStore);
        }
    });
</script>
