---
interface Props {
    lang: "en" | "fa";
}
const { lang } = Astro.props;

const t = {
    en: {
        generate: "Generate Password",
        copy: "Copy",
        copied: "Copied!",
        length: "Password Length",
        uppercase: "Uppercase",
        lowercase: "Lowercase",
        numbers: "Numbers",
        symbols: "Symbols",
        exclude: "Exclude Characters",
        ambiguous: "Ambiguous Characters",
        strength: "Strength",
        weak: "Weak",
        medium: "Medium",
        strong: "Strong",
        veryStrong: "Very Strong",
        about: "About Project",
        aboutDesc:
            "This project is an open-source password generator that runs entirely in your browser. No data is sent to any server, ensuring your security.",
        github: "GitHub",
        linkedin: "LinkedIn",
        instagram: "Instagram",
        close: "Close",
    },
    fa: {
        generate: "تولید رمز عبور",
        copy: "کپی",
        copied: "کپی شد!",
        length: "طول رمز عبور",
        uppercase: "حروف بزرگ",
        lowercase: "حروف کوچک",
        numbers: "اعداد",
        symbols: "نمادها",
        exclude: "استثنا کردن کاراکترها",
        ambiguous: "کاراکترهای مبهم",
        strength: "قدرت",
        weak: "ضعیف",
        medium: "متوسط",
        strong: "قوی",
        veryStrong: "بسیار قوی",
        about: "درباره پروژه",
        aboutDesc:
            "این پروژه یک تولیدکننده رمز عبور متن‌باز (Open Source) است که کاملاً روی مرورگر شما اجرا می‌شود. هیچ داده‌ای به سرور ارسال نمی‌شود و امنیت شما تضمین شده است.",
        github: "گیت‌هاب",
        linkedin: "لینکدین",
        instagram: "اینستاگرام",
        close: "بستن",
    },
}[lang];

const isRtl = lang === "fa";
---

<div
    class="w-full mx-auto bg-white dark:bg-gray-800 rounded-2xl shadow-xl p-5 md:p-6 transition-all duration-300"
    x-data="generator"
>
    <!-- Password Display -->
    <div class="relative mb-6 group" dir="ltr">
        <div
            class="w-full bg-gray-100 dark:bg-gray-700 rounded-xl p-4 flex items-center justify-between border-2 border-transparent focus-within:border-blue-500 transition-colors"
        >
            <input
                type="text"
                x-model="password"
                readonly
                class="w-full bg-transparent border-none focus:ring-0 text-xl md:text-2xl font-mono text-gray-800 dark:text-gray-100 truncate outline-none"
                aria-label="Generated Password"
            />
            <button
                @click="copy()"
                class="ml-2 p-2 text-gray-500 hover:text-blue-500 dark:text-gray-400 dark:hover:text-blue-400 transition-colors relative cursor-pointer"
                :aria-label="copied ? '{t.copied}' : '{t.copy}'"
            >
                <span x-show="!copied">
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"
                        ></path></svg
                    >
                </span>
                <span x-show="copied" x-cloak class="text-green-500">
                    <svg
                        class="w-6 h-6"
                        fill="none"
                        stroke="currentColor"
                        viewBox="0 0 24 24"
                        ><path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M5 13l4 4L19 7"></path></svg
                    >
                </span>

                <!-- Tooltip -->
                <div
                    x-show="copied"
                    x-transition
                    class="absolute top-full left-1/2 transform -translate-x-1/2 mt-2 px-2 py-1 bg-black text-white text-xs rounded shadow-lg whitespace-nowrap z-10"
                >
                    {t.copied}
                </div>
            </button>
        </div>

        <!-- Strength Bar -->
        <div
            class="mt-2 h-1.5 w-full bg-gray-200 dark:bg-gray-700 rounded-full overflow-hidden"
        >
            <div
                class="h-full transition-all duration-500 ease-out"
                :class="{
                    'bg-red-500': strength < 30,
                    'bg-yellow-500': strength >= 30 && strength < 60,
                    'bg-blue-500': strength >= 60 && strength < 80,
                    'bg-green-500': strength >= 80
                }"
                :style="`width: ${strength}%`"
            >
            </div>
        </div>
    </div>

    <!-- Length Slider -->
    <div class="mb-6">
        <div class="flex justify-between items-center mb-4">
            <label
                for="length-slider"
                class="text-sm font-medium text-gray-600 dark:text-gray-300"
                >{t.length}</label
            >
        </div>
        <div
            class="relative w-full h-8 flex items-center select-none"
            dir={isRtl ? "rtl" : "ltr"}
        >
            <div
                class="absolute top-1/2 left-0 w-full h-1 bg-gray-200 dark:bg-gray-700 rounded-full transform -translate-y-1/2 pointer-events-none"
            >
            </div>
            <div
                class="absolute top-1/2 h-1 bg-blue-500 rounded-full transform -translate-y-1/2 pointer-events-none z-10"
                :style={isRtl
                    ? "`width: ${((length - 4) / (64 - 4)) * 100}%; right: 0`"
                    : "`width: ${((length - 4) / (64 - 4)) * 100}%; left: 0`"}
            >
            </div>
            <input
                type="range"
                id="length-slider"
                min="4"
                max="64"
                x-model="length"
                class="absolute w-full h-full opacity-0 cursor-pointer z-20"
            />
            <div
                class="absolute h-8 w-8 bg-blue-500 rounded-full flex items-center justify-center text-white font-bold text-sm shadow-lg z-10 pointer-events-none"
                :style={isRtl
                    ? "`right: ${((length - 4) / (64 - 4)) * 100}%; transform: translateX(50%)`"
                    : "`left: ${((length - 4) / (64 - 4)) * 100}%; transform: translateX(-50%)`"}
            >
                <span x-text="length"></span>
            </div>
        </div>
    </div>

    <!-- Options Grid -->
    <div class="grid grid-cols-2 sm:grid-cols-4 gap-3 mb-6">
        <!-- Uppercase -->
        <label class="cursor-pointer group relative">
            <input type="checkbox" x-model="uppercase" class="peer sr-only" />
            <div
                class="p-4 rounded-xl border-2 border-gray-200 dark:border-gray-700 peer-checked:border-blue-500 peer-checked:bg-blue-50 dark:peer-checked:bg-blue-900/20 transition-all hover:border-blue-300 dark:hover:border-blue-700 flex flex-col items-center justify-center text-center h-full"
            >
                <span
                    class="text-lg font-bold text-gray-700 dark:text-gray-200 mb-1"
                    >ABC</span
                >
                <span class="text-xs text-gray-500 dark:text-gray-400"
                    >{t.uppercase}</span
                >
            </div>
            <div
                class="absolute top-2 right-2 text-blue-500 opacity-0 peer-checked:opacity-100 transition-opacity"
            >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
                    ><path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd"></path></svg
                >
            </div>
        </label>

        <!-- Lowercase -->
        <label class="cursor-pointer group relative">
            <input type="checkbox" x-model="lowercase" class="peer sr-only" />
            <div
                class="p-4 rounded-xl border-2 border-gray-200 dark:border-gray-700 peer-checked:border-blue-500 peer-checked:bg-blue-50 dark:peer-checked:bg-blue-900/20 transition-all hover:border-blue-300 dark:hover:border-blue-700 flex flex-col items-center justify-center text-center h-full"
            >
                <span
                    class="text-lg font-bold text-gray-700 dark:text-gray-200 mb-1"
                    >abc</span
                >
                <span class="text-xs text-gray-500 dark:text-gray-400"
                    >{t.lowercase}</span
                >
            </div>
            <div
                class="absolute top-2 right-2 text-blue-500 opacity-0 peer-checked:opacity-100 transition-opacity"
            >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
                    ><path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd"></path></svg
                >
            </div>
        </label>

        <!-- Numbers -->
        <label class="cursor-pointer group relative">
            <input type="checkbox" x-model="numbers" class="peer sr-only" />
            <div
                class="p-4 rounded-xl border-2 border-gray-200 dark:border-gray-700 peer-checked:border-blue-500 peer-checked:bg-blue-50 dark:peer-checked:bg-blue-900/20 transition-all hover:border-blue-300 dark:hover:border-blue-700 flex flex-col items-center justify-center text-center h-full"
            >
                <span
                    class="text-lg font-bold text-gray-700 dark:text-gray-200 mb-1"
                    >123</span
                >
                <span class="text-xs text-gray-500 dark:text-gray-400"
                    >{t.numbers}</span
                >
            </div>
            <div
                class="absolute top-2 right-2 text-blue-500 opacity-0 peer-checked:opacity-100 transition-opacity"
            >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
                    ><path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd"></path></svg
                >
            </div>
        </label>

        <!-- Symbols -->
        <label class="cursor-pointer group relative">
            <input type="checkbox" x-model="symbols" class="peer sr-only" />
            <div
                class="p-4 rounded-xl border-2 border-gray-200 dark:border-gray-700 peer-checked:border-blue-500 peer-checked:bg-blue-50 dark:peer-checked:bg-blue-900/20 transition-all hover:border-blue-300 dark:hover:border-blue-700 flex flex-col items-center justify-center text-center h-full"
            >
                <span
                    class="text-lg font-bold text-gray-700 dark:text-gray-200 mb-1"
                    >#$&</span
                >
                <span class="text-xs text-gray-500 dark:text-gray-400"
                    >{t.symbols}</span
                >
            </div>
            <div
                class="absolute top-2 right-2 text-blue-500 opacity-0 peer-checked:opacity-100 transition-opacity"
            >
                <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 20 20"
                    ><path
                        fill-rule="evenodd"
                        d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z"
                        clip-rule="evenodd"></path></svg
                >
            </div>
        </label>
    </div>

    <!-- Exclusion -->
    <div class="mb-6">
        <label
            for="exclude-input"
            class="block text-sm font-medium text-gray-600 dark:text-gray-300 mb-2"
        >
            {t.exclude}
        </label>
        <div class="flex gap-2">
            <input
                type="text"
                id="exclude-input"
                x-model="exclude"
                class="flex-1 bg-gray-100 dark:bg-gray-700 border-transparent focus:border-blue-500 focus:bg-white dark:focus:bg-gray-600 rounded-lg px-4 py-2 transition-colors outline-none"
                placeholder={isRtl ? "مثلا: abc" : "e.g. abc"}
            />
        </div>
        <div class="mt-2 text-right">
            <button
                @click="setAmbiguous()"
                class="text-xs text-blue-500 hover:text-blue-600 underline cursor-pointer"
            >
                {t.ambiguous}
            </button>
        </div>
    </div>

    <!-- Generate Button -->
    <button
        @click="generate()"
        class="w-full py-4 bg-blue-500 hover:bg-blue-600 text-white font-bold rounded-xl shadow-lg transform hover:-translate-y-0.5 transition-all duration-200 flex items-center justify-center gap-2 cursor-pointer"
    >
        <svg
            class="w-5 h-5"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
            ><path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M4 4v5h.582m15.356 2A8.001 8.001 0 004.582 9m0 0H9m11 11v-5h-.581m0 0a8.003 8.003 0 01-15.357-2m15.357 2H15"
            ></path></svg
        >
        {t.generate}
    </button>

    <!-- About Section -->
    <div x-data="{ open: false }" class="mt-6 text-center">
        <button
            @click="open = true"
            class="text-sm text-gray-500 hover:text-blue-500 dark:text-gray-400 dark:hover:text-blue-400 transition-colors underline decoration-dotted underline-offset-4 cursor-pointer"
        >
            {t.about}
        </button>

        <!-- Modal Backdrop -->
        <div
            x-show="open"
            style="display: none"
            x-transition:enter="transition ease-out duration-300"
            x-transition:enter-start="opacity-0"
            x-transition:enter-end="opacity-100"
            x-transition:leave="transition ease-in duration-200"
            x-transition:leave-start="opacity-100"
            x-transition:leave-end="opacity-0"
            class="fixed inset-0 z-50 flex items-center justify-center bg-black/60 backdrop-blur-sm p-4"
            @click.self="open = false"
        >
            <!-- Modal Content -->
            <div
                x-show="open"
                x-transition:enter="transition ease-out duration-300"
                x-transition:enter-start="opacity-0 scale-90 translate-y-4"
                x-transition:enter-end="opacity-100 scale-100 translate-y-0"
                x-transition:leave="transition ease-in duration-200"
                x-transition:leave-start="opacity-100 scale-100 translate-y-0"
                x-transition:leave-end="opacity-0 scale-90 translate-y-4"
                class="bg-white dark:bg-gray-800 rounded-2xl shadow-2xl w-full max-w-md overflow-hidden border border-gray-100 dark:border-gray-700"
            >
                <!-- Modal Header -->
                <div class="border-b border-gray-200 dark:border-gray-600 p-6">
                    <h3 class="text-xl font-bold">{t.about}</h3>
                </div>

                <!-- Modal Body -->
                <div class="p-6">
                    <p
                        class="text-gray-600 dark:text-gray-300 leading-relaxed mb-6"
                    >
                        {t.aboutDesc}
                    </p>

                    <!-- Social Links -->
                    <div class="flex justify-center gap-6 mb-8">
                        <!-- GitHub -->
                        <a
                            href="https://github.com/ooriyap/pass-password-generator"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="group flex flex-col items-center gap-2 text-gray-500 hover:text-gray-900 dark:text-gray-400 dark:hover:text-white transition-colors"
                        >
                            <div
                                class="p-3 bg-gray-100 dark:bg-gray-700 rounded-full group-hover:bg-gray-200 dark:group-hover:bg-gray-600 transition-colors"
                            >
                                <svg
                                    class="w-6 h-6"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"
                                    ></path>
                                </svg>
                            </div>
                            <span class="text-xs font-medium">{t.github}</span>
                        </a>

                        <!-- LinkedIn -->
                        <a
                            href="https://linkedin.com/in/ooriyap"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="group flex flex-col items-center gap-2 text-gray-500 hover:text-[#0077b5] dark:text-gray-400 dark:hover:text-[#0077b5] transition-colors"
                        >
                            <div
                                class="p-3 bg-gray-100 dark:bg-gray-700 rounded-full group-hover:bg-blue-50 dark:group-hover:bg-blue-900/30 transition-colors"
                            >
                                <svg
                                    class="w-6 h-6"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"
                                    ></path>
                                </svg>
                            </div>
                            <span class="text-xs font-medium">{t.linkedin}</span
                            >
                        </a>

                        <!-- Instagram -->
                        <a
                            href="https://instagram.com/ooriyap"
                            target="_blank"
                            rel="noopener noreferrer"
                            class="group flex flex-col items-center gap-2 text-gray-500 hover:text-[#E4405F] dark:text-gray-400 dark:hover:text-[#E4405F] transition-colors"
                        >
                            <div
                                class="p-3 bg-gray-100 dark:bg-gray-700 rounded-full group-hover:bg-pink-50 dark:group-hover:bg-pink-900/30 transition-colors"
                            >
                                <svg
                                    class="w-6 h-6"
                                    fill="currentColor"
                                    viewBox="0 0 24 24"
                                >
                                    <path
                                        d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"
                                    ></path>
                                </svg>
                            </div>
                            <span class="text-xs font-medium"
                                >{t.instagram}</span
                            >
                        </a>
                    </div>

                    <!-- Close Button -->
                    <button
                        @click="open = false"
                        class="w-full py-3 bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-800 dark:text-gray-200 font-semibold rounded-xl transition-colors cursor-pointer"
                    >
                        {t.close}
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    import generatorStore from "../scripts/generatorStore.js";

    document.addEventListener("alpine:init", () => {
        Alpine.data("generator", () => generatorStore);
    });
</script>
