---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import PasswordGenerator from "../components/PasswordGenerator.astro";
---

<Layout
    title="Pass - Secure Password Generator"
    description="Generate strong, secure passwords instantly with Pass. Features cryptographic security, adjustable length, and character customization."
    lang="en"
>
    <Header lang="en" />
    <main
        class="flex-1 flex flex-col items-center justify-center p-4 w-full max-w-4xl mx-auto pt-12"
    >
        <div
            class="flex flex-col md:flex-row items-center gap-6 md:gap-10 mb-8 w-full justify-center"
        >
            <img
                src="/favicon.svg"
                alt="Pass Logo"
                class="w-20 h-20 md:w-24 md:h-24"
            />
            <div class="text-center md:text-left max-w-xl">
                <h1
                    class="text-3xl md:text-4xl font-extrabold text-[#020618] dark:text-white mb-3 leading-tight"
                >
                    Generate Secure Passwords
                </h1>
                <p
                    class="text-base md:text-lg text-gray-600 dark:text-gray-300 leading-relaxed"
                >
                    Create strong, uncrackable passwords with our advanced
                    cryptographic generator.
                </p>
            </div>
        </div>

        <PasswordGenerator lang="en" />
    </main>
</Layout>
